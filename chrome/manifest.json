{
    "manifest_version": 2,

    "name": "Text simplifier",
    "description": "This extension displays a simplified version of the highlighted text",
    "icons": {
        "128": "logo128.png",
        "48": "logo48.png",
        "16": "logo16.png"
    },
    "version": "1.0",

    "browser_action": {
        "default_icon": {
            "19": "off.png",
            "38": "off@2x.png"
        }
    },
    "background":{
        "scripts": ["background.js"]
    },
    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": ["https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js", "script.js"],
            "run_at": "document_end"
        }
    ],
    "permissions": [
        "activeTab",
        "https://ajax.googleapis.com/"
    ]
}

{
    "manifest_version": 2,

    "name": "Text simplifier",
    "description": "This extension displays a simplified version of the highlighted text",
    "icons": {
        "128": "Logo.png"
    },
    "version": "1.0",

    "browser_action": {
        "default_icon": {
            "19": "action.png",
            "38": "action@2x.png"
        },
        "persistent": true
    },
    "background":{
        "scripts": ["background.js"]
    },
    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": ["script.js"],
            "run_at": "document_end"
        }
    ],
    "permissions": [
        "activeTab",
        "https://ajax.googleapis.com/"
    ]
}
